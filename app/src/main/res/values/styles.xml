<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="xColor" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- 枠線 -->
        <item name="colorControlNormal">@color/colorBlue</item>
        <!-- チェック時の色 -->
        <item name="colorControlActivated">@color/colorBlue</item>
        <!-- textColor -->
        <item name="android:textColor">@color/colorBlue</item>
    </style>
    <style name="yColor" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- 枠線 -->
        <item name="colorControlNormal">@color/colorGreen</item>
        <!-- チェック時の色 -->
        <item name="colorControlActivated">@color/colorGreen</item>
        <!-- textColor -->
        <item name="android:textColor">@color/colorGreen</item>
    </style>
    <style name="zColor" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- 枠線 -->
        <item name="colorControlNormal">@color/colorRed</item>
        <!-- チェック時の色 -->
        <item name="colorControlActivated">@color/colorRed</item>
        <!-- textColor -->
        <item name="android:textColor">@color/colorRed</item>
    </style>
</resources>
