<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#000"
    android:orientation="vertical"
    tools:context="com.example.kyoshinari.sensorradar.MainActivity"
    android:weightSum="1">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="37dp">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/xEnable"
        android:text="x"
        android:textColor="@color/colorBlue"
        android:theme="@style/xColor"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/yEnable"
        android:text="y"
        android:textColor="@color/colorGreen"
        android:theme="@style/yColor"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/zEnable"
        android:text="z"
        android:textColor="@color/colorRed"
        android:theme="@style/zColor"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/textView2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView"
            android:background="#FFF"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/xEnable"
            android:layout_marginStart="19dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView2"
            android:background="#FFF"
            android:layout_alignTop="@+id/textView"
            android:layout_toEndOf="@+id/yEnable"
            android:layout_marginStart="22dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView3"
            android:background="#FFF"
            android:layout_alignTop="@+id/textView2"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <ImageView
            android:id="@+id/graphImage"
            android:background="#FFF"
            android:layout_width="354dp"
            android:layout_height="wrap_content"
        android:layout_weight="0.75" />
</LinearLayout>
